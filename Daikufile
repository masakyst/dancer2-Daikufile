
use YAML;
use Template;


namespace dancer2 => sub {
    desc 'dancer2 scaffold';
    task scaffold => sub {
    };
};

namespace create => sub {

    desc 'create app.psgi';
    task psgi => sub {
        sh q(cp ./bin/app.pl app.psgi);
        sh q(chmod 0644 app.psgi);
        sh q(perl -pi -e 's/\.\.\/lib/lib/g' app.psgi);
    };

    desc 'create initd script';
    task initd => sub {
        my %merged_config = (
            %{ YAML::LoadFile('config.yml') },
            %{ YAML::LoadFile('environments/production.yml') }
        );
        my $tt = Template->new;
        sh q(mkdir -p init.d);
        sh q(curl -o init.d/script.tt https://raw.githubusercontent.com/masakyst/centos-initd-psgi-template/master/script.tt);
        my $output_script;
        $tt->process('init.d/script.tt', \%merged_config, \$output_script);
        open my $fhi, '>', 'init.d/'.$merged_config{appname} or die qw/Can't open file: $!/;
        print $fhi $output_script;
        close $fhi;
        sh q(mkdir -p logrotate.d);
        sh q(curl -o init.d/logrotate.tt https://raw.githubusercontent.com/masakyst/centos-initd-psgi-template/master/logrotate.tt);
        my $output_logrotate;
        $tt->process('init.d/logrotate.tt', \%merged_config, \$output_logrotate);
        open my $fhl, '>', 'logrotate.d/'.$merged_config{appname} or die qw/Can't open file: $!/;
        print $fhl $output_logrotate;
        close $fhl;
    };

};


namespace deploy => sub {
    desc 'deploy application';
    task app => sub {
        my ($task, @args) = @_; 
    };    
};


